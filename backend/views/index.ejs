}
/* ===============================
   FORCE SEARCH INPUT BORDER MATCH
   =============================== */

/* Search input in filter bar */
.controls input[type="text"],
.controls input[type="search"],
.search input{
  border:1px solid #0f0f11 !important;
  background:#ffffff;
  height:42px;
  border-radius:14px;
}

/* Focus state â€“ consistent with dropdowns */
.controls input[type="text"]:focus,
.controls input[type="search"]:focus,
.search input:focus{
  border-color:#000000 !important;
  box-shadow:0 0 0 2px rgba(37,99,235,.15);
  outline:none;
}


/* Make all filter elements same height */
.controls .chip,
.controls .select,
.controls .sort,
.search-with-btn input{
  height:42px;
  display:flex;
  align-items:center;
  border-radius:14px;
}

/* Fix chip padding & alignment */
.controls .chip{
  padding:0 14px;
  font-weight:700;
  white-space:nowrap;
}

/* Dropdown consistency */
.controls select{
  min-width:180px;
  padding:0 14px;
  font-weight:600;
