<title>AKC Auto Parts ‚Äî Shop</title>
<style>
  :root{
    --accent:#0f172a;
    --dark:#1f2937;
    --muted:#6b7280;
    --card:#ffffff;
    --bg:#f4f6f8;
    --success:#16a34a;
  }

  *{box-sizing:border-box}

  body{
    margin:0;
    font-family:"Nunito Sans", system-ui, sans-serif;
    background:linear-gradient(180deg,#f9fafb,#eef2f7);
    color:var(--dark);
    -webkit-font-smoothing:antialiased;
  }

  /* TOP NAV */
  .topbar{
    display:flex;
    align-items:center;
    gap:12px;
    padding:12px 18px;
    background:#ffffff;
    border-bottom:1px solid #e5e7eb;
    position:sticky;
    top:0;
    z-index:1000;
    box-shadow:0 2px 10px rgba(0,0,0,.06);
  }

  .logo{
    display:flex;
    align-items:center;
    gap:10px;
  }

  .logo img{
    height:42px;
    width:auto;
  }

  .brand{
    font-weight:800;
    font-size:18px;
    letter-spacing:0.6px;
  }

  .top-actions{
    margin-left:auto;
    display:flex;
    gap:10px;
    align-items:center;
  }

  .btn{
    background:#111827;
    color:#fff;
    border:none;
    padding:8px 14px;
    border-radius:10px;
    cursor:pointer;
    font-weight:600;
    transition:all .2s ease;
  }

  .btn.secondary{
    background:#ffffff;
    color:#111827;
    border:1px solid #e5e7eb;
  }

  .btn:hover{
    transform:translateY(-1px);
    box-shadow:0 4px 12px rgba(0,0,0,.15);
  }

  .icon-btn{
    background:transparent;
    border:0;
    cursor:pointer;
    padding:6px 8px;
    font-size:18px;
  }

  .status-bar{
    padding:10px 16px;
    font-size:14px;
    display:none;
  }

  .status-bar.success{
    display:block;
    background:#ecfdf5;
    color:#065f46;
    border-bottom:1px solid #bbf7d0;
  }

  .status-bar.error{
    display:block;
    background:#fef2f2;
    color:#991b1b;
    border-bottom:1px solid #fecaca;
  }

  .wrap{
    display:flex;
    gap:20px;
    padding:20px;
    max-width:1320px;
    margin:0 auto;
  }

  /* SIDEBAR */
.sidebar {
  width: 260px;
  background: #ffffff;
  border-radius: 22px;
  padding: 18px;
  box-shadow: 0 14px 40px rgba(0,0,0,.1);

  /* üî• IMPORTANT */
  height: calc(100vh - 84px);
  position: sticky;
  top: 84px;

  display: flex;
  flex-direction: column;
}

/* Main card inside sidebar */
.sidebar-card {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* Top content stays at top */
.sidebar-main {
  flex: 1;
}

/* Bottom content sticks to bottom */
.sidebar-footer {
  margin-top: auto;
  padding-top: 14px;
  border-top: 1px solid #eef2f7;
}


  .price-filter input{
    width:90px;
    padding:6px 8px;
    font-size:14px;
    border:1px solid #d1d5db;
    border-radius:8px;
    margin-bottom:8px;
    display:block;
  }

  #priceMin,
  #priceMax{
    width:70px;
    max-width:70px;
    min-width:70px;
    padding:6px;
    border-radius:8px;
    border:1px solid #d1d5db;
    box-sizing:border-box;
  }

  .filter-section{
    width:100%;
    display:flex;
    flex-direction:column;
    align-items:flex-start;
  }

  .sidebar h3{
    margin:0 0 12px 0;
    font-size:16px;
    font-weight:700;
  }

  .search input{
    width:100%;
    padding:10px 12px;
    border-radius:10px;
    border:1px solid #e5e7eb;
  }

  .filter-group{
    margin-bottom:16px;
  }

  .filter-group label{
    display:block;
    font-weight:700;
    margin-bottom:8px;
    font-size:13px;
  }

  .checkbox-list{
    display:flex;
    flex-direction:column;
    gap:6px;
    font-size:14px;
  }

  .range-row{
    display:flex;
    gap:8px;
    align-items:center;
    width:60px;
  }

  .range-row input[type=number]{
    width:50%;
    padding:8px;
    border-radius:8px;
    border:1px solid #d1d5db;
  }

  .main{
    flex:1;
  }

  /* PROMO SLIDER */
  .promo-slider{
    position:relative;
    width:100%;
    height:300px;
    overflow:hidden;
    border-radius:18px;
    margin-bottom:20px;
    background:linear-gradient(135deg,#2563eb,#1e40af);
    color:#ffffff;
    box-shadow:0 14px 36px rgba(0,0,0,.25);
  }

  .promo-slide{
    position:absolute;
    inset:0;
    padding:30px;
    display:flex;
    justify-content:space-between;
    align-items:center;
    opacity:0;
    transform:translateX(20px);
    transition:opacity .7s ease, transform .7s ease;
  }

  .promo-slide.active{
    opacity:1;
    transform:translateX(0);
    z-index:5;
  }

  .promo-slide .text-box{
    max-width:45%;
  }

 /* ===============================
   PROMO TEXT SIZE (ENHANCED)
   =============================== */

.promo-slide .text {
  font-size: 56px;          /* üî• main heading bigger */
  font-weight: 900;
  line-height: 1.15;
  letter-spacing: 0.6px;
}

.promo-slide .sub {
  font-size: 26px;          /* üî• subtitle bigger */
  margin-top: 12px;
  opacity: 0.95;
}


  .promo-img{
    width:340px;
    height:auto;
    object-fit:contain;
    opacity:.95;
  }

  /* PROMO DOTS */
  .promo-dots{
    position:absolute;
    bottom:14px;
    left:50%;
    transform:translateX(-50%);
    display:flex;
    gap:8px;
    z-index:20;
  }

  .promo-dot{
    width:8px;
    height:8px;
    background:#ffffff66;
    border-radius:50%;
    cursor:pointer;
    transition:.3s ease;
  }

  .promo-dot:hover{
    transform:scale(1.3);
    background:#ffffffaa;
  }

  .promo-dot.active{
    width:10px;
    height:10px;
    background:#ffffff;
    transform:scale(1.4);
  }

  /* CONTROLS */
  /* ===============================
   ALIGN FILTER CONTROLS INLINE
   =============================== */

/* Controls row layout */
.controls{
  display:flex;
  align-items:center;
  gap:14px;
  flex-wrap:nowrap; 
  margin-bottom:28px;    /* üîë prevents wrapping */
}

/* Search box alignment */
.search-with-btn{
  flex-shrink:0;
  width:300px;
}
/* ===============================
   FORCE SEARCH INPUT BORDER MATCH
   =============================== */

/* Search input in filter bar */
.controls input[type="text"],
.controls input[type="search"],
.search input{
  border:1px solid #0f0f11 !important;
  background:#ffffff;
  height:42px;
  border-radius:14px;
}

/* Focus state ‚Äì consistent with dropdowns */
.controls input[type="text"]:focus,
.controls input[type="search"]:focus,
.search input:focus{
  border-color:#000000 !important;
  box-shadow:0 0 0 2px rgba(37,99,235,.15);
  outline:none;
}


/* Make all filter elements same height */
.controls .chip,
.controls .select,
.controls .sort,
.search-with-btn input{
  height:42px;
  display:flex;
  align-items:center;
  border-radius:14px;
}

/* Fix chip padding & alignment */
.controls .chip{
  padding:0 14px;
  font-weight:700;
  white-space:nowrap;
}

/* Dropdown consistency */
.controls select{
  min-width:180px;
  padding:0 14px;
  font-weight:600;
}


/* Responsive safety */
@media(max-width:1100px){
  .controls{
    flex-wrap:wrap;   /* allow wrap only on small screens */
  }
}


  .grid{
    display:grid;
    grid-template-columns:repeat(auto-fill,minmax(220px,1fr));
    gap:18px;
    margin-top : 1%
  }

  /* CARD */
  .card{
    background:#ffffff;
    padding:14px;
    border-radius:18px;
    border:1px solid #e5e7eb;
    box-shadow:0 6px 18px rgba(0,0,0,.08);
    display:flex;
    flex-direction:column;
    gap:20px;
    min-height:260px;
    transition:.25s ease;
  }

  .card:hover{
    transform:translateY(-6px);
    box-shadow:0 16px 40px rgba(0,0,0,.18);
  }

  .card img{
    width:100%;
    height:140px;
    object-fit:cover;
    border-radius:14px;
    background:#f1f5f9;
    border:1px solid #e5e7eb;
  }

  .meta{
    display:flex;
    justify-content:space-between;
    align-items:center;
    gap:8px;
    font-size:13px;
  }

  .title{
    font-weight:700;
    font-size:15px;
    margin:0;
  }

  .id{
    color:var(--muted);
    font-size:12px;
  }

  .price{
    font-weight:800;
    color:#2563eb;
  }

  .card .actions{
    margin-top:auto;
    display:flex;
    gap:8px;
    align-items:center;
  }

  .qty{
    width:72px;
    padding:6px 8px;
    border-radius:10px;
    border:1px solid #e5e7eb;
  }

  .cart-badge{
    position:relative;
  }

  .cart-badge .count{
    position:absolute;
    top:-6px;
    right:-6px;
    background:var(--success);
    color:#fff;
    font-size:11px;
    padding:4px 6px;
    border-radius:999px;
    font-weight:700;
  }

  @media(max-width:900px){
    .wrap{padding:12px}
    .sidebar{display:none}
  }

  @media(max-width:480px){
    .promo-slide{
      flex-direction:column;
      text-align:center;
    }
    .promo-slide .text-box{
      max-width:100%;
    }
  }

  .muted{
    color:var(--muted);
    font-size:13px;
  }

  .chip{
    background:#eef2ff;
    padding:6px 10px;
    border-radius:999px;
    font-weight:700;
    font-size:13px;
    color:#1e3a8a;
  }
  /* ===============================
   FIX: SIGN OUT POPUP UI
   =============================== */

/* Ensure overlay fully covers page */
.popup-overlay{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,0.55);
  display:none;
  justify-content:center;
  align-items:center;
  z-index:3000;
}

/* Centered modal box */
.popup-box{
  background:#ffffff;
  padding:28px 32px;
  width:360px;
  max-width:90%;
  border-radius:16px;
  text-align:center;
  box-shadow:0 20px 50px rgba(0,0,0,.25);
}

/* Title */
.popup-box h3{
  margin:0 0 10px;
  font-size:22px;
  font-weight:800;
  color:#111827;
}

/* Message text */
.popup-box p{
  font-size:15px;
  color:#4b5563;
  margin-bottom:22px;
}

/* Button row */
.popup-actions{
  display:flex;
  justify-content:center;
  gap:14px;
}

/* Buttons */
.popup-btn{
  min-width:90px;
  padding:10px 18px;
  border-radius:10px;
  font-weight:700;
  font-size:14px;
  cursor:pointer;
  border:none;
  transition:all .2s ease;
}

/* YES button */
.popup-btn.yes{
  background:#dc2626;
  color:#fff;
}

.popup-btn.yes:hover{
  background:#b91c1c;
  transform:translateY(-1px);
}

/* NO button */
.popup-btn.no{
  background:#e5e7eb;
  color:#111827;
}

.popup-btn.no:hover{
  background:#d1d5db;
  transform:translateY(-1px);
}
/* ===============================
   IMPROVED MY ORDERS BUTTON
   =============================== */

.orders-btn{
  display:inline-flex;
  align-items:center;
  gap:6px;
  padding:8px 16px;
  background:linear-gradient(135deg,#111827,#1f2937);
  color:#ffffff;
  border-radius:12px;
  text-decoration:none;
  font-weight:700;
  font-size:14px;
  border:1px solid rgba(255,255,255,.08);
  box-shadow:0 6px 18px rgba(0,0,0,.18);
  transition:all .25s ease;
}
/* Active / click */
.orders-btn:active{
  transform:translateY(0);
  box-shadow:0 4px 12px rgba(0,0,0,.2);
}

/* Make sure it doesn‚Äôt clash on small screens */
@media(max-width:600px){
  .orders-btn{
    padding:8px 14px;
    font-size:13px;
  }
}
/* ===============================
   SIDEBAR CLOSED BY DEFAULT
   =============================== */

#sidebar{
  display:none;
}
/* ===============================
   FINAL FORCE STYLE FOR SELECTS
   =============================== */

/* Manufacturer & Category selects */
select.select,
select.sort{
  appearance:none !important;
  -webkit-appearance:none !important;
  -moz-appearance:none !important;

  height:42px;
  padding:0 42px 0 16px;
  border-radius:14px;
  border:1px solid #e1e1e6 !important;
  background-color:#ffffff !important;
  font-size:14px;
  font-weight:600;
  color:#111827;
  cursor:pointer;

  /* arrow */
  background-image:
    linear-gradient(45deg, transparent 50%, #6b7280 50%),
    linear-gradient(135deg, #6b7280 50%, transparent 50%);
  background-position:
    calc(100% - 20px) 18px,
    calc(100% - 14px) 18px;
  background-size:6px 6px;
  background-repeat:no-repeat;
}

/* Hover */
select.select:hover,
select.sort:hover{
  border-color:#2563eb !important;
}

/* Focus */
select.select:focus,
select.sort:focus{
  outline:none;
  border-color:#2563eb !important;
  box-shadow:0 0 0 2px rgba(37,99,235,.15);
}
