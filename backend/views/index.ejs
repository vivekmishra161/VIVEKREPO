/* ------------ Cart LocalStorage ------------ */
const LS_CART_KEY = 'akc_cart_v1';

function loadCart(){ try{ return JSON.parse(localStorage.getItem(LS_CART_KEY)) || []; }catch(e){return []} }
function saveCart(c){ localStorage.setItem(LS_CART_KEY, JSON.stringify(c)); updateCartBadge(); }

function updateCartBadge(){
  const cart = loadCart();
  const count = cart.reduce((s,i)=>s + (i.qty||0), 0);
  const el = document.getElementById('cartCount');
  if(count>0){ el.style.display='block'; el.textContent = count; }
  else { el.style.display='none'; }
}

/* ------------ Messages ------------ */
function showMessage(message, type = 'success'){
  const bar = document.getElementById('messageBar');
  if(!bar) return;
  bar.textContent = message;
  bar.classList.remove('success','error');
  bar.classList.add(type === 'error' ? 'error' : 'success');

  clearTimeout(window._msgTimer);
  window._msgTimer = setTimeout(()=>{
    bar.classList.remove('success','error');
    bar.style.display = 'none';
  }, 4000);

  bar.style.display = 'block';
}

