  background: #0f172a;
  color: #e5e7eb;
  margin-top: 80px;
  padding: 50px 20px 20px;
}

.footer-container {
  max-width: 1200px;
  margin: auto;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 40px;
}

.footer-box h3 {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 14px;
  color: #ffffff;
}

.footer-box a {
  color: #cbd5f5;
  text-decoration: none;
  transition: color 0.2s;
}

.footer-box a:hover {
  color: #38bdf8;
  text-decoration: underline;
}


.social-links {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.social-links a {
  text-decoration: none;
  color: #cbd5f5;
  font-size: 14px;
  transition: color 0.2s;
}

.social-links a:hover {
  color: #38bdf8;
}

.footer-bottom {
  text-align: center;
  margin-top: 40px;
  padding-top: 15px;
  border-top: 1px solid rgba(255,255,255,0.1);
