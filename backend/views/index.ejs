/* ------------ Cart LocalStorage ------------ */
const LS_CART_KEY = 'akc_cart_v1';

function loadCart(){ try{ return JSON.parse(localStorage.getItem(LS_CART_KEY)) || []; }catch(e){return []} }
function saveCart(c){ localStorage.setItem(LS_CART_KEY, JSON.stringify(c)); updateCartBadge(); }

function updateCartBadge(){
  const cart = loadCart();
  const count = cart.reduce((s,i)=>s + (i.qty||0), 0);
  const el = document.getElementById('cartCount');
  if(count>0){ el.style.display='block'; el.textContent = count; }
  else { el.style.display='none'; }
}

/* ------------ Messages ------------ */
function showMessage(message, type = 'success'){
  const bar = document.getElementById('messageBar');
  if(!bar) return;
  bar.textContent = message;
  bar.classList.remove('success','error');
  bar.classList.add(type === 'error' ? 'error' : 'success');

  clearTimeout(window._msgTimer);
  window._msgTimer = setTimeout(()=>{
    bar.classList.remove('success','error');
    bar.style.display = 'none';
  }, 4000);

  bar.style.display = 'block';
}

/* ------------ Render products ------------ */
const productGrid = document.getElementById('productGrid');
const resultsCount = document.getElementById('resultsCount');

function renderProducts(list) {
  // ALWAYS show grid again
  productGrid.style.display = "grid";

  productGrid.innerHTML = '';

  if (!list || list.length === 0) {
    productGrid.innerHTML = `
      <div style="grid-column:1/-1; padding:18px; background:#fff; border-radius:10px">
        No products found
      </div>
    `;
    resultsCount.textContent = 'Showing 0 products';
    return;
  }

  list.forEach(p => {
    const div = document.createElement('div');
    div.className = 'card';

    const imageSrc = p.image || p.img || '/images/no-image.png';

    div.innerHTML = `
      <img src="${imageSrc}" alt="${escapeHtml(p.name)}" loading="lazy">

      <div style="display:flex; justify-content:space-between; gap:10px; align-items:center;">
        <div>
          <p class="title">${escapeHtml(p.name)}</p>
          <div class="id">${p.id} â€¢ <span class="muted">${p.manufacturer || 'Hyundai'}</span></div>
        </div>
        <div class="price">â‚¹${numberWithCommas(p.finalPrice || p.price)}</div>
      </div>

      <div style="display:flex; gap:8px; align-items:center; margin-top:8px;">
        <button class="btn secondary" onclick="viewPart('${p.id}')">View</button>
      </div>
    `;

    productGrid.appendChild(div);
  });

  resultsCount.textContent = `Showing ${list.length} products`;
}

/* ------------ Filters ------------ */
async function loadProducts(filters = {}) {
  const params = new URLSearchParams(filters).toString();

  const res = await fetch(`/api/products?${params}`);
  const data = await res.json();

  renderProducts(data);
}
function filterByCategory(category) {
  loadProducts({ category });
}
function selectCategory(category) {
  document.getElementById("categoryLabel").innerText =
    category || "All Categories";

  document.getElementById("categoryDropdown")
    .classList.remove("active");

  loadProducts({ category });
}
document.querySelectorAll(".filter-btn").forEach(btn => {
  btn.addEventListener("click", () => {
    btn.parentElement.classList.toggle("active");
  });
});

/* ------------ Cart ------------ */
function addToCart(productId, qty){
  const cart = loadCart();
  const existing = cart.find(i => i.id === productId);
  if(existing) existing.qty += qty;
  else cart.push({ id: productId, qty });
  saveCart(cart);
  showMessage('Item added to cart.', 'success');
}
function addToCartFromBtn(btn){
  const card = btn.closest('.card');
  const id = btn.getAttribute('data-id');
  const qty = Number(card.querySelector('.qty').value || 1);
  addToCart(id, qty);
}



/* ------------ Product View (new page) ------------ */
function viewPart(id){
  window.location.href = '/product?id=' + encodeURIComponent(id);
}

/* ------------ UI helpers & init ------------ */
function escapeHtml(str){ return String(str).replace(/[&<>"']/g, (m)=>({ "&":"&amp;", "<":"&lt;", ">":"&gt;", '"':"&quot;", "'":"&#39;" }[m])); }
function numberWithCommas(x){ return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); }

