/* ------------ Filters ------------ */
function getActiveManufacturers(){
  return Array.from(document.querySelectorAll('.filter-manufacturer:checked')).map(n=>n.value);
}
function getActiveCategories(){
  return Array.from(document.querySelectorAll('.filter-category:checked')).map(n=>n.value);
}
function applyFilters() {
  const q =
    (document.getElementById('miniSearch')?.value || '').toLowerCase();

  const manufacturer =
    document.getElementById('manufacturerSelect')?.value || '';

  const category =
    document.getElementById('categorySelect')?.value || '';

  const sort =
    document.getElementById('sortSelect')?.value || 'relevance';

  let filtered = products.filter(p => {

    const matchQ =
      !q ||
      p.name.toLowerCase().includes(q) ||
      p.id.toLowerCase().includes(q);

    const matchM =
      !manufacturer ||
      p.manufacturer.toLowerCase() === manufacturer.toLowerCase();

    const matchC =
      !category ||
      p.category.toLowerCase() === category.toLowerCase();

    return matchQ && matchM && matchC;
  });

  if (sort === 'price-asc') filtered.sort((a,b)=>a.price - b.price);
  if (sort === 'price-desc') filtered.sort((a,b)=>b.price - a.price);
  if (sort === 'name-asc') filtered.sort((a,b)=>a.name.localeCompare(b.name));

  renderProducts(filtered);
}





function quickFilterManufacturer(){
  const v = document.getElementById('manufacturerSelect').value;
  document.querySelectorAll('.filter-manufacturer').forEach(ch=>{
    ch.checked = (v === '' ? true : ch.value === v);
  });
  applyFilters();
}
function quickFilterCategory() {
  const v = document.getElementById('categorySelect').value.toLowerCase();

  document.querySelectorAll('.filter-category').forEach(ch => {
    ch.checked = (v === '' || ch.value.toLowerCase() === v);
  });

  applyFilters();
}

function resetFilters(){
  document.getElementById('miniSearch').value = '';
  document.getElementById('manufacturerSelect').value = '';
  document.getElementById('categorySelect').value = '';
  document.getElementById('sortSelect').value = 'relevance';

  applyFilters();
}


/* ------------ Cart ------------ */
function addToCart(productId, qty){
  const cart = loadCart();
  const existing = cart.find(i => i.id === productId);
  if(existing) existing.qty += qty;
  else cart.push({ id: productId, qty });
  saveCart(cart);
  showMessage('Item added to cart.', 'success');
}
function addToCartFromBtn(btn){
  const card = btn.closest('.card');
  const id = btn.getAttribute('data-id');
  const qty = Number(card.querySelector('.qty').value || 1);
  addToCart(id, qty);
}

