/* =================================================
   DESKTOP â€” FULL WIDTH PROMO SLIDER
================================================= */

.promo-slider {
  width: 100vw;
  max-width: 100vw;
  margin-bottom: 30px;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);

  height: 420px;
  border-radius: 0;
  overflow: hidden;
  position: relative;
}

.promo-slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.8s ease;
}


.promo-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
}



  .promo-slide.active{
    opacity:1;
    transform:translateX(0);
    z-index:5;
  }
