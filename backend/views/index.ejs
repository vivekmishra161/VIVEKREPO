  /* ===============================
   ALIGN FILTER CONTROLS INLINE
   =============================== */

/* Controls row layout */
.controls{
  display:flex;
  align-items:center;
  gap:14px;
  flex-wrap:nowrap; 
  margin-bottom:28px;    /* ðŸ”‘ prevents wrapping */
