<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/mobile-ui.css">

  <title>Sign In - AKC Auto Parts</title>

  <style>
    * { box-sizing: border-box; }
    
    body {
      font-family: 'Nunito Sans';
      background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
      padding: 40px 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
    }
    
    .box {
      background: #fff;
      padding: 30px 25px;
      border-radius: 16px;
      width: 100%;
      max-width: 380px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }
    
    h2 {
      text-align: center;
      font-size: 26px;
      font-weight: 800;
      color: #111827;
      margin-bottom: 25px;
    }
    
    label {
      font-weight: 700;
      margin-top: 12px;
      display: block;
      font-size: 14px;
      color: #374151;
    }
    
    input {
      width: 100%;
      padding: 12px 14px;
      margin-top: 6px;
      border: 1px solid #d1d5db;
      border-radius: 10px;
      font-size: 15px;
      transition: all 0.25s ease;
    }
    
    input:focus {
      outline: none;
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
    }
    
    button {
      width: 100%;
      margin-top: 20px;
      padding: 14px;
      background: linear-gradient(135deg, #111827, #1f2937);
      color: white;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      font-size: 16px;
      font-weight: 700;
      transition: all 0.25s ease;
    }
    
    button:hover {
      background: linear-gradient(135deg, #1f2937, #374151);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(17, 24, 39, 0.25);
    }
    
    p {
      text-align: center;
      margin-top: 18px;
      font-size: 14px;
      color: #6b7280;
    }
    
    p a {
      color: #2563eb;
      text-decoration: none;
      font-weight: 600;
    }
    
    p a:hover {
      text-decoration: underline;
    }

    /* popup */
    .popup-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.5);
      display: none;
      z-index: 99;
    }
    
    .popup-box {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      padding: 24px 30px;
      border-radius: 14px;
      display: none;
      font-size: 16px;
      text-align: center;
      box-shadow: 0 15px 40px rgba(0,0,0,0.25);
      z-index: 100;
      width: 90%;
      max-width: 320px;
    }
    
    .popup-success { border-left: 6px solid #28a745; }
    .popup-error { border-left: 6px solid #dc3545; }
    
    /* Mobile Responsive Styles */
    @media(max-width: 480px) {
      body {
        padding: 20px 15px;
      }
      
      .box {
        padding: 25px 20px;
        border-radius: 14px;
      }
      
      h2 {
        font-size: 22px;
        margin-bottom: 20px;
      }
      
      label {
        font-size: 13px;
      }
      
      input {
        padding: 11px 12px;
        font-size: 14px;
      }
      
      button {
        padding: 12px;
        font-size: 15px;
      }
      
      p {
        font-size: 13px;
      }
      
      .popup-box {
        padding: 20px;
        font-size: 14px;
      }
    }
    
    @media(max-width: 360px) {
      .box {
        padding: 20px 15px;
      }
      
      h2 {
        font-size: 20px;
      }
      
      input {
        padding: 10px;
      }
      
      button {
        padding: 11px;
        font-size: 14px;
      }
    }
  </style>

</head>
<body>

  <div class="box">
    <h2>Sign In</h2>

    <form action="/signin" method="POST">
      <label>Email:</label>
      <input type="email" name="email" required>

      <label>Password:</label>
      <input type="password" name="password" required>

      <button type="submit">Sign In</button>
    </form>

    <p>Don't have an account? <a href="/signup">Sign Up</a></p>
  </div>

  <!-- popup UI -->
  <div id="popupOverlay" class="popup-overlay"></div>
  <div id="popupBox" class="popup-box"></div>

  <!-- hidden popup status from server -->
  <input type="hidden" id="popupStatus" value="<%= popup %>">

  <script>
    function showPopup(message, type, redirectURL) {
      const overlay = document.getElementById("popupOverlay");
      const box = document.getElementById("popupBox");

      box.innerHTML = message;
      box.className = "popup-box " + (type === "success" ? "popup-success" : "popup-error");

      overlay.style.display = "block";
      box.style.display = "block";

      setTimeout(() => {
        overlay.style.display = "none";
        box.style.display = "none";
        if (redirectURL) window.location.href = redirectURL;
      }, 2000);
    }

    // Read popup status
    const popup = document.getElementById("popupStatus").value;

    if (popup === "success") {
      showPopup("✔ Signed in successfully!", "success", "/");
    } else if (popup === "failed") {
      showPopup("❌ Invalid email or password!", "error", null);
    }
  </script>

</body>
</html>
