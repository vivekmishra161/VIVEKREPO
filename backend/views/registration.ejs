    /* =====================================================
   LEVEL 3 ‚Äî BRAND CHECKOUT UI
===================================================== */
:root {
  --bg: #f6f8fc;
  --card: #ffffff;
  --text: #0f172a;
  --muted: #6b7280;
  --border: #e5e7eb;

  --brand: #0f172a;
  --accent: #2563eb;
  --accent-dark: #1e40af;

  --radius-lg: 22px;
  --radius-md: 14px;

  --shadow-soft: 0 10px 25px rgba(0,0,0,.06);
  --shadow-main: 0 25px 55px rgba(0,0,0,.08);
}

/* ================= BASE ================= */
* { box-sizing: border-box; }

body {
  margin: 0;
  font-family: "Nunito Sans", system-ui;
  background: linear-gradient(180deg,#f9fbff,#eef3fb);
  color: var(--text);
  padding: 26px 16px 60px;
}

/* ================= HEADER ================= */
.checkout-header {
  max-width: 1200px;
  margin: 0 auto 22px;
  padding: 18px 30px;
  background: #ffffff;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: var(--shadow-soft);
}

.checkout-left {
  display: flex;
  align-items: center;
  gap: 14px;
}

.checkout-logo {
  height: 42px;
}

.checkout-title {
  font-size: 22px;
  font-weight: 900;
  letter-spacing: .5px;
}

.checkout-right {
  font-size: 14px;
  font-weight: 700;
  color: var(--muted);
}

/* ================= STEPS ================= */
.checkout-steps {
  max-width: 1200px;
  margin: 0 auto 18px;
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  font-weight: 800;
  color: #9ca3af;
}

.checkout-steps span.active {
  color: var(--accent);
}

/* ================= MAIN CARD ================= */
.box {
  max-width: 1200px;
  margin: auto;
  background: var(--card);
  border-radius: 26px;
  padding: 34px;
  box-shadow: var(--shadow-main);

  display: grid;
  grid-template-columns: 1.4fr 1fr;
  gap: 34px;
}

@media (max-width: 900px) {
  .box {
    grid-template-columns: 1fr;
  }
}

/* ================= TITLE ================= */
.box h2 {
  grid-column: 1 / -1;
  font-size: 25px;
  font-weight: 900;
  margin-bottom: 12px;
  border-bottom: 1px solid var(--border);
  padding-bottom: 14px;
}

/* ================= FORM ================= */
form {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px 22px;
}

textarea,
.row,
h3,
#upiBox,
.btn,
.muted {
  grid-column: 1 / -1;
}

label {
  font-size: 13px;
  font-weight: 800;
  color: #374151;
}

input,
textarea,
select {
  width: 100%;
  padding: 13px 14px;
  border-radius: var(--radius-md);
  border: 1px solid var(--border);
  background: #f9fafb;
  font-size: 14px;
}

input:focus,
textarea:focus,
select:focus {
  outline: none;
  border-color: #2563eb;
  background: #ffffff;
}


/* ================= ORDER SUMMARY ================= */
.muted {
  background: #f8fafc;
  border-radius: 18px;
  padding: 18px;
  border: 1px solid var(--border);
  font-weight: 800;
}

.muted span {
  float: right;
  font-size: 20px;
  color: var(--accent-dark);
}

/* ================= PAYMENT ================= */
h3 {
  margin-top: 8px;
  font-size: 18px;
  font-weight: 900;
}

label input[type="radio"] {
  accent-color: var(--accent);
  margin-right: 6px;
}
#upiBox p strong,
#upiBox p:first-child {
  display: none;
}

#upiBox::before {
  content: "Scan the QR code below to complete your UPI payment.";
  display: block;
  font-size: 14px;
  font-weight: 700;
  color: #374151;
  margin-bottom: 10px;
  text-align: center;
}


/* ================= CTA ================= */
.btn {
  margin-top: 10px;
  width: 100%;
  padding: 16px;
  border-radius: 16px;
  border: none;
  cursor: pointer;
  font-size: 17px;
  font-weight: 900;
  letter-spacing: .5px;
  color: #ffffff;
  background: linear-gradient(135deg,var(--accent),var(--accent-dark));
  transition: .25s ease;
}

.btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 18px 35px rgba(37,99,235,.35);
}

/* ================= LANGUAGE DROPDOWN ================= */

.lang-select {
  position: relative;
  display: inline-block;
}

.lang-select select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;

  background: #ffffff;
  border: 2px solid #2563eb;
  border-radius: 8px;

  padding: 8px 36px 8px 12px;
  font-size: 13px;
  font-weight: 600;
  color: #2563eb;

  cursor: pointer;
  outline: none;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(37, 99, 235, 0.12);
}

.lang-select select:hover {
  border-color: #1e40af;
  background: #f0f9ff;
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
}

.lang-select select:focus {
  border-color: #1e40af;
  background: #f0f9ff;
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1), 0 4px 12px rgba(37, 99, 235, 0.2);
}

.lang-select::after {
  content: "üåê";
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 16px;
  pointer-events: none;
  transition: transform 0.3s ease;
}

.lang-select select:hover::after {
  transform: translateY(-50%) scale(1.1);
}

.lang-select select:focus::after {
  transform: translateY(-50%) scale(1.15);
}

.lang-select select option {
  background: #ffffff;
  color: #2563eb;
  padding: 8px;
  font-weight: 600;
}

.lang-select select option:hover {
  background: #2563eb;
  color: #ffffff;
}

.lang-select select option:checked {
  background: #2563eb;
  color: #ffffff;
  font-weight: 700;
}

/* ================= PREMIUM SUCCESS POPUP ================= */

.popup-overlay {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.55);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;

  opacity: 0;
  visibility: hidden;
  transition: .4s ease;
  z-index: 9999;
}

.popup-overlay.show {
  opacity: 1;
  visibility: visible;
}

.popup-overlay.show .popup-box {
  opacity: 1;
  transform: scale(1) translateY(0);
}

/* Card */
.popup-box {
  width: 380px;
  background: #ffffff;
  border-radius: 28px;
  padding: 36px 32px 32px;
  text-align: center;
  box-shadow: 0 40px 100px rgba(0,0,0,.35);

  transform: scale(.85) translateY(30px);
  opacity: 0;
  transition: .45s cubic-bezier(.25,.8,.25,1);
}


/* Success circle */
.success-icon {
  width: 96px;
  height: 96px;
  margin: 0 auto 18px;
  border-radius: 50%;
  background: linear-gradient(135deg,#22c55e,#16a34a);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;

  animation: pulseGlow 1.8s infinite;
}

.success-icon img {
  width: 42px;
  filter: brightness(0) invert(1);
}

/* Glow */
@keyframes pulseGlow {
  0% { box-shadow: 0 0 0 0 rgba(34,197,94,.6); }
  70% { box-shadow: 0 0 0 25px rgba(34,197,94,0); }
  100% { box-shadow: 0 0 0 0 rgba(34,197,94,0); }
}

/* Text */
.popup-box h3 {
  font-size: 22px;
  font-weight: 900;
  margin-bottom: 6px;
  color: #0f172a;
}

.popup-box p {
  font-size: 14px;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 18px;
}

/* progress bar */
.popup-progress {
  height: 6px;
  width: 100%;
  background: #e5e7eb;
  border-radius: 999px;
  overflow: hidden;
}

.popup-progress span {
  display: block;
  height: 100%;
  width: 0%;
  background: linear-gradient(90deg,#22c55e,#16a34a);
  animation: progressFill 1.6s linear forwards;
}

@keyframes progressFill {
  from { width: 0%; }
  to { width: 100%; }
}

