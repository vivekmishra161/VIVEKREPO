<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/mobile-ui.css">
  <title>Admin Dashboard</title>

  <style>
    *{box-sizing:border-box}
    body{margin:0;font-family:'Nunito Sans',sans-serif;background:#f3f4f6}

    .sidebar{
      width:220px;
      background:#111827;
      color:#fff;
      height:100vh;
      position:fixed;
      padding:20px;
      z-index:1000;
      transition:transform 0.3s ease;
    }

    .sidebar a{
      display:block;
      color:#fff;
      text-decoration:none;
      padding:12px;
      border-radius:8px;
      margin-bottom:10px;
    }

    .sidebar a:hover{background:#1f2937}

    .brand{
      display:flex;
      align-items:center;
      gap:12px;
      margin-bottom:40px;
    }

    .brand img{width:38px}
    .brand span{font-size:20px;font-weight:700}

    .main{
      margin-left:240px;
      padding:30px;
    }
    
    /* Mobile menu toggle button */
    .menu-toggle{
      display:none;
      position:fixed;
      top:15px;
      left:15px;
      z-index:1001;
      background:#111827;
      color:#fff;
      border:none;
      padding:10px 14px;
      border-radius:8px;
      font-size:18px;
      cursor:pointer;
    }

    .cards{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
      gap:20px;
    }

    .card{
      background:#fff;
      padding:35px;
      border-radius:14px;
      box-shadow:0 10px 30px rgba(0,0,0,.08);
      cursor:pointer;
      transition:.2s;
    }

    .card:hover{
      transform:translateY(-4px);
      box-shadow:0 20px 40px rgba(0,0,0,.12);
    }

    .card h3{margin:0}
    .card-link{text-decoration:none;color:inherit}
    /* ===== ANALYTICS SECTION ===== */

.section-title {
  margin-top: 50px;
  margin-bottom: 20px;
  font-size: 22px;
  font-weight: 700;
  color: #111827;
}

.analytics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  gap: 30px;
}

/* Chart card */
.chart-card {
  background: #ffffff;
  padding: 22px 24px 26px;
  border-radius: 16px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.08);
  transition: transform .2s, box-shadow .2s;
}

.chart-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 18px 40px rgba(0,0,0,0.12);
}

.chart-card h3 {
  margin: 0 0 16px;
  font-size: 16px;
  font-weight: 700;
  color: #1f2937;
}

/* Fix chart height */
.chart-card canvas {
  width: 100% !important;
  height: 260px !important;
}

/* Responsive tweak */
@media (max-width: 768px) {
  .chart-card canvas {
    height: 220px !important;
  }
}

/* ===============================
   MOBILE RESPONSIVE STYLES
   =============================== */

@media(max-width:900px){
  .sidebar{
    transform:translateX(-100%);
  }
  
  .sidebar.open{
    transform:translateX(0);
  }
  
  .menu-toggle{
    display:block;
  }
  
  .main{
    margin-left:0;
    padding:70px 20px 30px;
  }
  
  .cards{
    grid-template-columns:repeat(2,1fr);
    gap:15px;
  }
  
  .card{
    padding:25px 20px;
  }
  
  .analytics-grid{
    grid-template-columns:1fr;
    gap:20px;
  }
  
  .section-title{
    margin-top:35px;
    font-size:20px;
  }
}

@media(max-width:600px){
  .main{
    padding:60px 15px 25px;
  }
  
  .main h1{
    font-size:24px;
    margin-bottom:20px;
  }
  
  .cards{
    grid-template-columns:1fr;
    gap:12px;
  }
  
  .card{
    padding:20px 18px;
    border-radius:12px;
  }
  
  .card h3{
    font-size:16px;
  }
  
  .card p{
    font-size:13px;
  }
  
  .section-title{
    margin-top:30px;
    margin-bottom:15px;
    font-size:18px;
  }
  
  .chart-card{
    padding:16px 14px 20px;
    border-radius:14px;
  }
  
  .chart-card h3{
    font-size:14px;
    margin-bottom:12px;
  }
  
  .chart-card canvas{
    height:200px !important;
  }
  
  .sidebar{
    width:200px;
    padding:15px;
  }
  
  .brand{
    margin-bottom:30px;
  }
  
  .brand img{
    width:32px;
  }
  
  .brand span{
    font-size:16px;
  }
  
  .sidebar a{
    padding:10px;
    font-size:14px;
  }
  
  .menu-toggle{
    top:12px;
    left:12px;
    padding:8px 12px;
    font-size:16px;
  }
}

@media(max-width:400px){
  .main{
    padding:55px 10px 20px;
  }
  
  .main h1{
    font-size:20px;
  }
  
  .card{
    padding:16px 14px;
  }
  
  .card h3{
    font-size:14px;
  }
  
  .chart-card canvas{
    height:180px !important;
  }
}

  </style>
</head>

<body>

<!-- Mobile Menu Toggle -->
<button class="menu-toggle" onclick="toggleSidebar()">☰</button>

<!-- SIDEBAR -->
<div class="sidebar" id="sidebar">
  <div class="brand">
    <img src="https://th.bing.com/th/id/R.35647c0cec927537fa43ed1836a446c2?rik=7Lzu71WwPczowA&riu=http%3a%2f%2fpluspng.com%2fimg-png%2fhyundai-logo-png-hyundai-car-logo-png-brand-image-1749.png&ehk=UI8O%2bS7ci5lpalKI9Rf1u%2bMYvCgw%2bVwAeupMAcxmk2g%3d&risl=&pid=ImgRaw&r=0">
    <span>AKC Admin</span>
  </div>

  <a href="/admin/dashboard">Dashboard</a>
  <a href="/admin/products">Products</a>
  <a href="/admin/orders">Orders</a>
  <a href="/admin/reviews">Reviews</a>
  <a href="/admin/logout">Logout</a>
</div>

<!-- MAIN -->
<div class="main">
  <h1>Dashboard</h1>

  <div class="cards">

    <a href="/admin/products" class="card-link">
      <div class="card">
        <h3>Products</h3>
        <p>Manage all products</p>
      </div>
    </a>

    <a href="/admin/orders" class="card-link">
      <div class="card">
        <h3>Orders</h3>
        <p>Track customer orders</p>
      </div>
    </a>

    <a href="/admin/reviews" class="card-link">
      <div class="card">
        <h3>Reviews</h3>
        <p>Manage customer reviews</p>
      </div>
    </a>

    <div class="card">
      <h3>Revenue</h3>
      <p style="font-size:22px;font-weight:700;color:#065f46;margin-top:10px">
        ₹ <%= totalRevenue %>
      </p>
      <small>Delivered orders</small>
    </div>

  </div>

  <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:30px;margin-top:20px">
    <h2 class="section-title">Analytics</h2>
  </div>
<div>
  <div class="chart-card">
    <h3>Order Overview</h3>
    <canvas id="orderBarChart"></canvas>
  </div>

  <div class="chart-card">
    <h3>Order Status Distribution</h3>
    <canvas id="orderPieChart"></canvas>
  </div>

</div>


<!-- CHART JS -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<div id="stats"
  data-total="<%= totalOrders %>"
  data-delivered="<%= delivered %>"
  data-cancelled="<%= cancelled %>"
  data-pending="<%= pending %>"
  data-packed="<%= packed %>">
</div>


<script>
const el = document.getElementById('stats');

if (!el) {
  console.error("Stats element not found");
}

const orderStats = {
  total: Number(el.dataset.total || 0),
  delivered: Number(el.dataset.delivered || 0),
  cancelled: Number(el.dataset.cancelled || 0),
  pending: Number(el.dataset.pending || 0),
  packed: Number(el.dataset.packed || 0)
};
</script>



<!-- BAR CHART -->
<script>
const barCanvas = document.getElementById('orderBarChart');

if (barCanvas) {
  new Chart(barCanvas, {
    type: 'bar',
    data: {
      labels: ['Total', 'Delivered', 'Cancelled', 'Pending', 'Packed'],
      datasets: [{
        data: [
          orderStats.total,
          orderStats.delivered,
          orderStats.cancelled,
          orderStats.pending,
          orderStats.packed
        ],
        backgroundColor: [
          '#1f2937',
          '#065f46',
          '#991b1b',
          '#92400e',
          '#1d4ed8'
        ]
      }]
    },
    options: {
      plugins: { legend: { display: false } }
    }
  });
}

</script>


<!-- PIE CHART -->
<script>
const pieCanvas = document.getElementById('orderPieChart');

if (pieCanvas) {
  new Chart(pieCanvas, {
    type: 'pie',
    data: {
      labels: ['Delivered', 'Cancelled', 'Pending', 'Packed'],
      datasets: [{
        data: [
          orderStats.delivered,
          orderStats.cancelled,
          orderStats.pending,
          orderStats.packed
        ],
        backgroundColor: [
          '#065f46',
          '#991b1b',
          '#92400e',
          '#1d4ed8'
        ]
      }]
    }
  });
}
</script>

<!-- Mobile Sidebar Toggle Script -->
<script>
function toggleSidebar() {
  const sidebar = document.getElementById('sidebar');
  sidebar.classList.toggle('open');
}

// Close sidebar when clicking outside on mobile
document.addEventListener('click', function(e) {
  const sidebar = document.getElementById('sidebar');
  const menuToggle = document.querySelector('.menu-toggle');
  
  if (window.innerWidth <= 900) {
    if (!sidebar.contains(e.target) && !menuToggle.contains(e.target)) {
      sidebar.classList.remove('open');
    }
  }
});
</script>

</body>
</html>
