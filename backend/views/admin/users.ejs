<!DOCTYPE html>
<html>
<head>
  <title>Admin - Users</title>
  <style>
    body {
      font-family: Arial;
      padding: 30px;
      background: #f4f6f9;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: left;
    }

    th {
      background: #0f172a;
      color: white;
    }

    tr:hover {
      background: #f1f1f1;
    }

    h2 {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

<h2>ðŸ‘¥ Registered Users</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Joined</th>
    </tr>
  </thead>

  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

</body>
</html>
