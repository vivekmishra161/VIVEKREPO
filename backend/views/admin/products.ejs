<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Products</title>

  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
*{
  box-sizing:border-box;
}

body{
  margin:0;
  font-family:'Nunito Sans',sans-serif;
  background:linear-gradient(135deg,#eaf1ff,#f8fafc);
  color:#0f172a;
  min-height:100vh;
  display:flex;
  justify-content:center;
  align-items:flex-start;
  padding:40px 20px;
}

/* ===== MAIN WRAPPER CENTER ===== */
.main{
  width:100%;
  max-width:1100px;
}

/* ===== TITLE ===== */
h1{
  text-align:center;
  margin-bottom:25px;
  font-size:30px;
  font-weight:800;
  letter-spacing:.6px;
}

/* ===== TABLE ===== */
table{
  width:100%;
  border-collapse:separate;
  border-spacing:0 14px;
}

/* HEADER */
th{
  background:#0f172a;
  color:#fff;
  padding:16px;
  font-size:14px;
  text-transform:uppercase;
  letter-spacing:.6px;
}

th:first-child{border-top-left-radius:14px}
th:last-child{border-top-right-radius:14px}

/* ROW CARD */
tr{
  background:#fff;
  border-radius:16px;
  box-shadow:0 10px 26px rgba(0,0,0,.1);
  transition:.25s ease;
}


td{
  padding:16px;
  font-size:15px;
}

/* PRICE */
td:nth-child(3){
  font-weight:800;
  color:#2563eb;
}

/* ===== STOCK BADGES ===== */
.stock-badge{
  padding:7px 16px;
  border-radius:999px;
  font-size:13px;
  font-weight:700;
  display:inline-block;
}

.stock-green{
  background:#dcfce7;
  color:#065f46;
}

.stock-orange{
  background:#ffedd5;
  color:#9a3412;
}

.stock-red{
  background:#fee2e2;
  color:#991b1b;
}
.search-box{
  width:100%;
  max-width:420px;
  margin:0 auto 25px;
  position:relative;
}

.search-box input{
  width:100%;
  padding:14px 18px;
  border-radius:12px;
  border:1px solid #d1d5db;
  font-size:15px;
  outline:none;
  font-weight:600;
  transition:.25s ease;
}

.search-box input:focus{
  border-color:#2563eb;
  box-shadow:0 0 0 4px rgba(37,99,235,.15);
}

/* ===============================
   MOBILE RESPONSIVE STYLES
   =============================== */

@media(max-width:768px){
  body{
    padding:30px 15px;
  }
  
  h1{
    font-size:24px;
    margin-bottom:20px;
  }
  
  .search-box{
    max-width:100%;
    margin-bottom:20px;
  }
  
  .search-box input{
    padding:12px 14px;
    font-size:14px;
  }
  
  table{
    display:block;
    overflow-x:auto;
    white-space:nowrap;
  }
  
  th{
    padding:12px 10px;
    font-size:12px;
  }
  
  td{
    padding:12px 10px;
    font-size:13px;
  }
}

@media(max-width:600px){
  body{
    padding:20px 10px;
  }
  
  h1{
    font-size:22px;
    margin-bottom:18px;
  }
  
  .search-box input{
    padding:11px 12px;
    font-size:13px;
    border-radius:10px;
  }
  
  /* Convert table to card layout on mobile */
  table, thead, tbody, th, td, tr{
    display:block;
  }
  
  thead tr{
    position:absolute;
    top:-9999px;
    left:-9999px;
  }
  
  tr{
    margin-bottom:15px;
    border-radius:14px;
    box-shadow:0 8px 22px rgba(0,0,0,0.08);
    padding:14px;
    background:#ffffff;
    white-space:normal;
  }
  
  td{
    border:none;
    position:relative;
    padding:10px 10px 10px 40%;
    text-align:right;
    white-space:normal;
    font-size:13px;
  }
  
  td:before{
    position:absolute;
    left:14px;
    width:35%;
    padding-right:10px;
    text-align:left;
    font-weight:700;
    color:#374151;
    font-size:11px;
    text-transform:uppercase;
  }
  
  td:nth-of-type(1):before { content: "ID"; }
  td:nth-of-type(2):before { content: "Name"; }
  td:nth-of-type(3):before { content: "Price"; }
  td:nth-of-type(4):before { content: "Stock"; }
  
  td:nth-child(3){
    font-size:15px;
  }
  
  .stock-badge{
    padding:5px 12px;
    font-size:11px;
  }
}

@media(max-width:400px){
  body{
    padding:15px 8px;
  }
  
  h1{
    font-size:20px;
  }
  
  tr{
    padding:12px;
  }
  
  td{
    padding:8px 8px 8px 38%;
    font-size:12px;
  }
  
  td:before{
    font-size:10px;
  }
}

</style>


</head>
<body>

<div class="main">
  <h1>Products</h1>
  <div class="search-box">
  <input 
    type="text" 
    id="productSearch" 
    placeholder="Search by part name or part ID..."
    onkeyup="searchProducts()"
  >
</div>


  <table>
    <tr>
  <th>ID</th>
  <th>Name</th>
  <th>Price</th>
  <th>Stock</th>
</tr>
<% products.forEach(p => { %>
<tr>
  <td><%= p.id %></td>
  <td><%= p.name %></td>
  <td>â‚¹ <%= p.price %></td>

  <td>
    <% if (p.stock === "In Stock") { %>
      <span style="color:green;font-weight:600;">In Stock</span>
    <% } else if (p.stock === "Limited") { %>
      <span style="color:orange;font-weight:600;">Limited</span>
    <% } else { %>
      <span style="color:red;font-weight:600;">Out of Stock</span>
    <% } %>
  </td>
</tr>
<% }) %>
<script>
function searchProducts() {
  const input = document.getElementById("productSearch").value.toLowerCase();
  const rows = document.querySelectorAll("table tr");

  rows.forEach((row, index) => {
    if (index === 0) return; // skip header

    const text = row.innerText.toLowerCase();
    row.style.display = text.includes(input) ? "" : "none";
  });
}
</script>

</body>
</html>
