<!DOCTYPE html>
<html>
<head>
  
  <title>Admin Products</title>

  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
*{
  box-sizing:border-box;
}

body{
  margin:0;
  font-family:'Nunito Sans',sans-serif;
  background:linear-gradient(135deg,#eaf1ff,#f8fafc);
  color:#0f172a;
  min-height:100vh;
  display:flex;
  justify-content:center;
  align-items:flex-start;
  padding:40px 20px;
}

/* ===== MAIN WRAPPER CENTER ===== */
.main{
  width:100%;
  max-width:1100px;
}

/* ===== TITLE ===== */
h1{
  text-align:center;
  margin-bottom:25px;
  font-size:30px;
  font-weight:800;
  letter-spacing:.6px;
}

/* ===== TABLE ===== */
table{
  width:100%;
  border-collapse:separate;
  border-spacing:0 14px;
}

/* HEADER */
th{
  background:#0f172a;
  color:#fff;
  padding:16px;
  font-size:14px;
  text-transform:uppercase;
  letter-spacing:.6px;
}

th:first-child{border-top-left-radius:14px}
th:last-child{border-top-right-radius:14px}

/* ROW CARD */
tr{
  background:#fff;
  border-radius:16px;
  box-shadow:0 10px 26px rgba(0,0,0,.1);
  transition:.25s ease;
}


td{
  padding:16px;
  font-size:15px;
}

/* PRICE */
td:nth-child(3){
  font-weight:800;
  color:#2563eb;
}

/* ===== STOCK BADGES ===== */
.stock-badge{
  padding:7px 16px;
  border-radius:999px;
  font-size:13px;
  font-weight:700;
  display:inline-block;
}

.stock-green{
  background:#dcfce7;
  color:#065f46;
}

.stock-orange{
  background:#ffedd5;
  color:#9a3412;
}

.stock-red{
  background:#fee2e2;
  color:#991b1b;
}
.search-box{
  width:100%;
  max-width:420px;
  margin:0 auto 25px;
  position:relative;
}

.search-box input{
  width:100%;
  padding:14px 18px;
  border-radius:12px;
  border:1px solid #d1d5db;
  font-size:15px;
  outline:none;
  font-weight:600;
  transition:.25s ease;
}

.search-box input:focus{
  border-color:#2563eb;
  box-shadow:0 0 0 4px rgba(37,99,235,.15);
}

</style>


</head>
<body>

<div class="main">
  <h1>Products</h1>
  <div class="search-box">
  <input 
    type="text" 
    id="productSearch" 
    placeholder="Search by part name or part ID..."
    onkeyup="searchProducts()"
  >
</div>


  <table>
    <tr>
  <th>ID</th>
  <th>Name</th>
  <th>Price</th>
  <th>Stock</th>
</tr>
<% products.forEach(p => { %>
<tr>
  <td><%= p.id %></td>
  <td><%= p.name %></td>
  <td>â‚¹ <%= p.price %></td>

  <td>
    <% if (p.stock === "In Stock") { %>
      <span style="color:green;font-weight:600;">In Stock</span>
    <% } else if (p.stock === "Limited") { %>
      <span style="color:orange;font-weight:600;">Limited</span>
    <% } else { %>
      <span style="color:red;font-weight:600;">Out of Stock</span>
    <% } %>
  </td>
</tr>
<% }) %>
<script>
function searchProducts() {
  const input = document.getElementById("productSearch").value.toLowerCase();
  const rows = document.querySelectorAll("table tr");

  rows.forEach((row, index) => {
    if (index === 0) return; // skip header

    const text = row.innerText.toLowerCase();
    row.style.display = text.includes(input) ? "" : "none";
  });
}
</script>

</body>
</html>
