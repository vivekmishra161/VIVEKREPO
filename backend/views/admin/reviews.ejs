<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Reviews - Admin Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Nunito Sans', sans-serif;
      background: linear-gradient(135deg, #eef3ff, #f9fbff);
      min-height: 100vh;
      padding: 50px 20px;
      color: #0f172a;
      display: flex;
      justify-content: center;
    }

    .container {
      max-width: 1250px;
      width: 100%;
    }

    h1 {
      text-align: center;
      margin-bottom: 35px;
      font-size: 34px;
      font-weight: 900;
      letter-spacing: 0.8px;
      color: #0f172a;
    }

    .header {
      background: #ffffff;
      padding: 20px 0;
      margin-bottom: 30px;
    }

    .stats {
      display: flex;
      gap: 20px;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 25px;
    }

    .stat-box {
      background: #ffffff;
      padding: 16px 24px;
      border-radius: 12px;
      font-size: 14px;
      font-weight: 700;
      box-shadow: 0 4px 15px rgba(15, 23, 42, 0.08);
      display: flex;
      align-items: center;
      gap: 8px;
      color: #2563eb;
    }

    .back-btn {
      background: #2563eb;
      color: white;
      padding: 12px 28px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      font-weight: 600;
      font-size: 14px;
      transition: all 0.25s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .back-btn:hover {
      background: #1d4ed8;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(37, 99, 235, 0.15);
    }

    .empty-state {
      background: #ffffff;
      padding: 80px 40px;
      border-radius: 18px;
      text-align: center;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
    }

    .empty-state h2 {
      color: #0f172a;
      margin-bottom: 12px;
      font-size: 24px;
      font-weight: 700;
    }

    .empty-state p {
      color: #475569;
      font-size: 15px;
    }

    .search-container {
      width: 100%;
      max-width: 520px;
      margin: 0 auto 30px;
      position: relative;
    }

    .search-box {
      width: 100%;
      padding: 14px 18px;
      border-radius: 14px;
      border: 1px solid #d1d5db;
      font-size: 15px;
      font-weight: 600;
      outline: none;
      transition: 0.25s ease;
    }

    .search-box:focus {
      border-color: #2563eb;
      box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.15);
    }

    .product-section {
      background: #ffffff;
      border-radius: 18px;
      margin-bottom: 18px;
      overflow: hidden;
      box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
      transition: 0.3s ease;
    }

    .product-section:hover {
      box-shadow: 0 16px 40px rgba(15, 23, 42, 0.15);
      transform: translateY(-2px);
    }

    .product-header {
      background: linear-gradient(135deg, #0f172a, #1e293b);
      color: white;
      padding: 18px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 20px;
    }

    .product-info h2 {
      font-size: 18px;
      margin-bottom: 4px;
      font-weight: 700;
    }

    .product-info p {
      font-size: 13px;
      opacity: 0.9;
      line-height: 1.4;
    }

    .review-count {
      background: rgba(255, 255, 255, 0.2);
      padding: 8px 16px;
      border-radius: 999px;
      font-size: 13px;
      font-weight: 700;
      white-space: nowrap;
    }

    .reviews-list {
      padding: 0;
    }

    .review-item {
      border-bottom: 1px solid #f1f5f9;
      padding: 18px;
      transition: 0.3s ease;
    }

    .review-item:last-child {
      border-bottom: none;
    }

    .review-item:hover {
      background: #f9fbff;
    }

    .review-content {
      flex: 1;
    }

    .review-header {
      display: flex;
      gap: 12px;
      align-items: center;
      margin-bottom: 10px;
      flex-wrap: wrap;
    }

    .reviewer-name {
      font-weight: 800;
      color: #0f172a;
      font-size: 15px;
    }

    .rating {
      color: #f59e0b;
      font-size: 13px;
      font-weight: 700;
    }

    .review-date {
      color: #475569;
      font-size: 13px;
      margin-left: auto;
    }

    .review-message {
      color: #0f172a;
      font-size: 14px;
      line-height: 1.6;
      margin-top: 10px;
      padding: 12px 14px;
      background: #f1f5f9;
      border-radius: 8px;
    }

    .review-actions {
      display: flex;
      gap: 10px;
      margin-top: 12px;
    }

    .delete-btn {
      background: #fee2e2;
      color: #991b1b;
      border: none;
      padding: 8px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 13px;
      font-weight: 600;
      transition: 0.2s ease;
    }

    .delete-btn:hover {
      background: #fecaca;
      transform: translateY(-1px);
    }

    .no-reviews-message {
      color: #475569;
      text-align: center;
      padding: 40px 20px;
      font-size: 15px;
    }

    .no-results {
      display: none;
    }

    .no-results.show {
      display: block;
    }

    /* Modal Popup */
    .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }

    .modal.show {
      display: flex;
    }

    .modal-content {
      background: #ffffff;
      border-radius: 14px;
      padding: 32px;
      max-width: 420px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(15, 23, 42, 0.2);
      animation: slideDown 0.3s ease;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .modal-header {
      margin-bottom: 16px;
    }

    .modal-header h2 {
      color: #0f172a;
      font-size: 20px;
      font-weight: 700;
      margin: 0;
    }

    .modal-message {
      color: #475569;
      font-size: 15px;
      line-height: 1.6;
      margin-bottom: 28px;
    }

    .modal-actions {
      display: flex;
      gap: 12px;
      justify-content: flex-end;
    }

    .modal-btn {
      padding: 10px 20px;
      border-radius: 8px;
      border: none;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.2s ease;
    }

    .modal-btn-cancel {
      background: #f1f5f9;
      color: #0f172a;
    }

    .modal-btn-cancel:hover {
      background: #e2e8f0;
    }

    .modal-btn-delete {
      background: #fee2e2;
      color: #991b1b;
    }

    .modal-btn-delete:hover {
      background: #fecaca;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      body {
        padding: 30px 15px;
      }

      h1 {
        font-size: 26px;
      }

      .stats {
        width: 100%;
        justify-content: flex-start;
      }

      .back-btn {
        width: 100%;
        justify-content: center;
      }

      .stats {
        flex-direction: column;
      }

      .stat-box {
        width: 100%;
      }

      .product-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .review-count {
        margin-top: 8px;
      }

      .review-item {
        padding: 16px;
      }

      .review-message {
        font-size: 13px;
      }
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #764ba2;
    }
  </style>
</head>
<body>

<div class="container">
  <h1>Reviews</h1>

  <% if (reviewsByProduct.length === 0) { %>
    <div class="empty-state">
      <h2>No Reviews Yet</h2>
      <p>There are no customer reviews at this time.</p>
    </div>
  <% } else { %>
    <div class="header">
      <div class="stats">
        <div class="stat-box">
          Total Reviews: <strong><%= totalReviews %></strong>
        </div>
        <div class="stat-box">
          Products Reviewed: <strong><%= reviewsByProduct.length %></strong>
        </div>
      </div>
    </div>

    <div class="search-container">
      <input 
        type="text" 
        id="searchBox" 
        class="search-box" 
        placeholder="Search by product name or ID..."
        onkeyup="filterProducts()"
      >
    </div>

    <div class="no-results" id="noResults">
      <div class="empty-state">
        <h2>No Products Found</h2>
        <p>No products match your search. Try a different search term.</p>
      </div>
    </div>
    <% reviewsByProduct.forEach((productReviews, index) => { %>
      <div class="product-section" 
           data-product-name="<%= productReviews.productName.toLowerCase() %>"
           data-product-id="<%= productReviews.productId.toLowerCase() %>"
           data-manufacturer="<%= productReviews.manufacturer.toLowerCase() %>"
           style="--index: <%= index %>">
        <div class="product-header">
          <div class="product-info">
            <h2><%= productReviews.productName %></h2>
            <p><strong><%= productReviews.manufacturer %></strong> • ID: <strong><%= productReviews.productId %></strong></p>
          </div>
          <div class="review-count">
            <%= productReviews.reviews.length %> <%= productReviews.reviews.length === 1 ? 'Review' : 'Reviews' %>
          </div>
        </div>

        <div class="reviews-list">
          <% if (productReviews.reviews.length === 0) { %>
            <div class="no-reviews-message">No reviews for this product</div>
          <% } else { %>
            <% productReviews.reviews.forEach((review) => { %>
              <% if (review.id) { %>
              <div class="review-item" data-review-id="<%= review.id %>">
                <div class="review-content">
                  <div class="review-header">
                    <span class="reviewer-name"><%= review.userName %></span>
                    <span class="rating"><%= '★'.repeat(review.rating) %></span>
                    <span class="review-date"><%= new Date(review.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
                  </div>
                  <div class="review-message"><%= review.message %></div>
                  <div class="review-actions">
                    <button class="delete-btn" onclick="openDeleteModal(<%= parseInt(review.id) %>)">Delete</button>
                  </div>
                </div>
              </div>
              <% } %>
            <% }); %>
          <% } %>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Delete Review?</h2>
    </div>
    <div class="modal-message">
      Are you sure you want to delete this review? This action cannot be undone.
    </div>
    <div class="modal-actions">
      <button class="modal-btn modal-btn-cancel" onclick="closeDeleteModal()">Cancel</button>
      <button class="modal-btn modal-btn-delete" onclick="confirmDelete()">Delete</button>
    </div>
  </div>
</div>

<script>
let reviewIdToDelete = null;

function openDeleteModal(reviewId) {
  console.log('Opening modal for review:', reviewId, 'Type:', typeof reviewId);
  reviewIdToDelete = parseInt(reviewId, 10);
  console.log('Stored reviewIdToDelete:', reviewIdToDelete, 'Type:', typeof reviewIdToDelete);
  
  if (!reviewIdToDelete || isNaN(reviewIdToDelete)) {
    console.error('Invalid review ID:', reviewId);
    alert('Error: Invalid review ID');
    return;
  }
  
  document.getElementById('deleteModal').classList.add('show');
}

function closeDeleteModal() {
  document.getElementById('deleteModal').classList.remove('show');
  reviewIdToDelete = null;
}

function confirmDelete() {
  console.log('Confirming delete for review:', reviewIdToDelete, 'Type:', typeof reviewIdToDelete);
  if (reviewIdToDelete && !isNaN(reviewIdToDelete)) {
    closeDeleteModal();
    deleteReview(reviewIdToDelete);
  } else {
    console.error('No valid review ID to delete:', reviewIdToDelete);
    alert('Error: No valid review selected');
  }
}

function filterProducts() {
  const searchBox = document.getElementById('searchBox');
  const searchTerm = searchBox.value.toLowerCase();
  const productSections = document.querySelectorAll('.product-section');
  const noResults = document.getElementById('noResults');
  let visibleCount = 0;

  productSections.forEach(section => {
    const productName = section.getAttribute('data-product-name');
    const productId = section.getAttribute('data-product-id');
    const manufacturer = section.getAttribute('data-manufacturer');

    if (
      productName.includes(searchTerm) ||
      productId.includes(searchTerm) ||
      manufacturer.includes(searchTerm)
    ) {
      section.style.display = 'block';
      visibleCount++;
    } else {
      section.style.display = 'none';
    }
  });

  // Show no results message if nothing matches
  if (visibleCount === 0 && searchTerm.length > 0) {
    noResults.classList.add('show');
  } else {
    noResults.classList.remove('show');
  }
}

function deleteReview(reviewId) {
  const numId = parseInt(reviewId, 10);
  console.log('Deleting review:', numId, 'Type:', typeof numId);
  
  if (!numId || isNaN(numId)) {
    alert('Error: Invalid review ID');
    return;
  }

  fetch(`/admin/review/delete/${numId}`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    }
  })
  .then(res => {
    console.log('Response status:', res.status);
    return res.json();
  })
  .then(data => {
    console.log('Response data:', data);
    if (data.success) {
      const reviewElement = document.querySelector(`[data-review-id="${numId}"]`);
      console.log('Review element found:', !!reviewElement);
      if (reviewElement) {
        reviewElement.style.opacity = '0';
        reviewElement.style.transform = 'translateX(-100%)';
        reviewElement.style.transition = 'all 0.3s ease';
        setTimeout(() => {
          reviewElement.remove();
          setTimeout(() => location.reload(), 300);
        }, 300);
      }
    } else {
      alert('Failed to delete review: ' + (data.message || 'Unknown error'));
    }
  })
  .catch(err => {
    console.error('Delete error:', err);
    alert('Error deleting review: ' + err.message);
  });
}

// Close modal when clicking outside
document.addEventListener('click', function(event) {
  const modal = document.getElementById('deleteModal');
  if (event.target === modal) {
    closeDeleteModal();
  }
});
</script>

</body>
</html>
